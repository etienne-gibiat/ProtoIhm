                            android:layout_height="wrap_content"
                            android:text="TITLE"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DESC"
                            android:textSize="10dp" />


                    </LinearLayout>

                </RelativeLayout>


